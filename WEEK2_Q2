class Solution {
public:
    string mergeAlternately(string word1, string word2) {
      int a = word1.length();
      int b = word2.length();
      string merged = "";
      int i = 0;
      while(i<a || i<b){
        if(i<a)
        merged += word1[i];
        if(i<b)
        merged += word2[i];
        i++;
      }
      return merged;
    }
   
};
